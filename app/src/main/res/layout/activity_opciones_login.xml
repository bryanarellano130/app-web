<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpcionesLogin"
    android:background="#B5ABAB">
    
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:gravity="center">

        <ImageView
            android:src="@drawable/facebook"
            android:layout_width="60dp"
            android:layout_height="80dp"/>
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Ingresar_facebook"
            android:text="@string/Ingresar_facebook"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m_button_height"
            app:cornerRadius="8dp"/>

        <ImageView
            android:src="@drawable/gmail"
            android:layout_width="60dp"
            android:layout_height="80dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Ingresar_gmail"
            android:text="@string/Ingresar_gmail"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m_button_height"
            app:cornerRadius="8dp"/>



    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>